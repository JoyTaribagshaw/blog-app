<div class="post">
  <h3><%= @post.title %> by <%= @post.author.name %></h3>
  <p class="counter">
    Comments: <%= @post.comments_counter.to_i %>, Likes: <%= @post.likes_counter.to_i %>
  </p>
  <p><%= @post.text %></p>

  <!-- Delete Button -->
  <% if can? :destroy, @post %>
    <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
  <% end %>
</div>

<% flash.each do |name, msg| -%>
  <%= content_tag :div, msg, class: name %>
<% end -%>

<ul class="comments_container">
  <% @post.comments.each do |comment| %>
    <li class="comment">
      <p><%= comment.user.name %>: <%= comment.text %></p>
      <!-- Delete Button for Comments -->
      <% if can? :destroy, comment %>
        <%= link_to 'Delete Comment', comment, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= render partial: "likes/like_action", locals: { post: @post } %>
<%= link_to 'New Comment', new_user_post_comment_path(post_id: params[:id]) %>
